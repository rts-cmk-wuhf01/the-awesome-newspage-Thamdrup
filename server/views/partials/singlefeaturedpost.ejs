<!-- Single Featured Post -->
<% singleFeaturedPost.forEach((singleFeaturedPost, index) => { %>
	<div class="single-blog-post small-featured-post d-flex">
		<div class="post-thumb">
			<a href="#"><img src="/img/bg-img/<%= singleFeaturedPost.article_image%>" alt=""></a>
		</div>
		<div class="post-data">
			<a href="#" class="post-catagory"><%= singleFeaturedPost.category_title %></a>
			<div class="post-meta">
				<a href="#" class="post-title">
					<h6><%= singleFeaturedPost.article_title %></h6>
				</a>
				<% let now = new Date(singleFeaturedPost.article_postdate); %>
				<% let formattedDate = dateAndTime.format(now,'h:mm A MMMM D'); %>
					<p class="post-date"><%= formattedDate %></p>
			</div>
		</div>
	</div>
<% }) %> 