<div class="section-heading">
	<h6>Info</h6>
</div>
<!-- Popular News Widget -->
<div class="popular-news-widget mb-30">
	<h3>4 Most Popular News</h3>

	<!-- Single Popular Blog -->
	<% popularStoriesInfo.forEach((popularStoryInfo, index) => { %>
		<!-- Single Popular Blog -->
			<div class="single-popular-post">
				<a href="#">
					<h6><span><%= index+1 %></span><%= popularStoryInfo.article_title %></h6>
				</a>
				<% let now = new Date(popularStoryInfo.article_postdate); %>
				<% let formattedDate = dateAndTime.format(now,'h:mm A D. MMMM'); %>
				<p class="post-date"><%= formattedDate %></p>
			</div>
		<% }) %> 

<!-- Newsletter Widget -->
<div class="newsletter-widget">
	<h4>Newsletter</h4>
	<p>Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.</p>
	<form action="#" method="post">
		<input type="text" name="text" placeholder="Name">
		<input type="email" name="email" placeholder="Email">
		<button type="submit" class="btn w-100">Subscribe</button>
	</form>
</div>
